pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Debugging the branch name and build number
                    echo "Branch Name: ${env.BRANCH_NAME}"
                    echo "Build Number: ${env.BUILD_NUMBER}"

                    // Build Docker Image
                    sh 'docker build -t my-app:${BRANCH_NAME}${BUILD_NUMBER} build/.'
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    // Log in to Docker Hub
                    sh 'echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin'
                    
                    if (env.BRANCH_NAME == 'dev') {
                        sh 'docker tag my-app:${BRANCH_NAME}${BUILD_NUMBER} sanjaykumar2001/dev:latest'
                        sh 'docker push sanjaykumar2001/dev:latest'
                    } else if (env.BRANCH_NAME == 'master') {
                        sh 'docker tag my-app:${BRANCH_NAME}${BUILD_NUMBER} sanjaykumar2001/prod-repo:latest'
                        sh 'docker push sanjaykumar2001/prod-repo:latest'
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
