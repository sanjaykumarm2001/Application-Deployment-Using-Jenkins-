pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    def branchName = env.BRANCH_NAME ?: 'default-branch'
                    def buildNumber = env.BUILD_NUMBER ?: '0'
                    
                    echo "Branch Name: ${branchName}"
                    echo "Build Number: ${buildNumber}"

                    sh "docker build -t my-app:${branchName}-${buildNumber} ."
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    sh 'echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin'
                    
                    if (branchName == 'dev') {
                        sh "docker tag my-app:${branchName}-${buildNumber} sanjaykumar2001/dev:latest"
                        sh "docker push sanjaykumar2001/dev:latest"
                    } else if (branchName == 'master') {
                        sh "docker tag my-app:${branchName}-${buildNumber} sanjaykumar2001/prod-repo:latest"
                        sh "docker push sanjaykumar2001/prod-repo:latest"
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
