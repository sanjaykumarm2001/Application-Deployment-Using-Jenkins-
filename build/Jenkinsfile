pipeline {
    agent any

    environment {
        DOCKER_REPO = 'sanjaykumar2001/'
        IMAGE_TAG = ''
        KUBE_DEPLOYMENT_NAME = 'my-deployment'
        KUBE_NAMESPACE = 'power-ranger'  
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    if (env.BRANCH_NAME == 'dev') {
                        env.DOCKER_REPO = 'sanjaykumar2001/dev'
                    } else if (env.BRANCH_NAME == 'master') {
                        env.DOCKER_REPO = 'sanjaykumar2001/prod'
                    }

                    env.IMAGE_TAG = "${env.BUILD_ID}"

                    docker.build("${env.DOCKER_REPO}:${env.IMAGE_TAG}", ".")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'DOCKERHUB_CREDENTIALS') {
                        docker.image("${env.DOCKER_REPO}:${env.IMAGE_TAG}").push()
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    sh """
                    kubectl set image deployment/${env.KUBE_DEPLOYMENT_NAME} \
                    my-app-container=${env.DOCKER_REPO}:${env.IMAGE_TAG} \
                    --namespace=${env.KUBE_NAMESPACE}
                    """
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
