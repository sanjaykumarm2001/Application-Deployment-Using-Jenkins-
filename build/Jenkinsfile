pipeline {
    agent any

    triggers {
        // Automatically trigger builds on GitHub push events
        githubPush()
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Checkout code from the branch that triggered the build
                    echo "Checking out branch: ${env.BRANCH_NAME}"
                    git url: 'https://github.com/sanjaykumarm2001/devops-build/', branch: env.BRANCH_NAME
                }
            }
        }


        stage('Build and Deploy Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'DOCKERHUB_CREDENTIALS', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                    script {
                        // Ensure deploy.sh is executable and run it
                        echo "Deploying Docker image..."
                        sh 'chmod +x build/deploy.sh'
                        sh './build/deploy.sh'
                    }
                }
            }
        }
    }
}
